<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_make_reservation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sparkleusc.sparklesparkhere.MakeReservationActivity">

    <TextView
        android:text="*Insert Parking Spot Name*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/titleTV"
        android:layout_centerHorizontal="true"
        android:id="@+id/titleParkingSpotTV" />

    <TextView
        android:text="Title:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/titleTV"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/titleParkingSpotTV"
        android:layout_marginEnd="28dp" />

    <TextView
        android:text="Price Per Hour:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleParkingSpotTV"
        android:layout_toStartOf="@+id/titleParkingSpotTV"
        android:layout_marginTop="19dp"
        android:id="@+id/pricePerHourTV" />

    <TextView
        android:text="*Insert price*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pricePerHourTV"
        android:layout_centerHorizontal="true"
        android:id="@+id/priceTV" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_below="@+id/priceTV"
        android:layout_toEndOf="@+id/textView5"
        android:layout_marginStart="28dp"
        android:layout_marginTop="26dp"
        android:id="@+id/editText" />

    <TextView
        android:text="Enter Date: (xx/xx/xxxx)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_alignBaseline="@+id/editText"
        android:layout_alignBottom="@+id/editText"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Enter Time: (xx:xx)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:layout_alignStart="@+id/titleTV"
        android:layout_marginTop="40dp"
        android:id="@+id/textView7" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_below="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_marginTop="25dp"
        android:id="@+id/enterTimeET" />

    <Switch
        android:text="Recurring? (Yes/No)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:id="@+id/recurringSwitch"
        android:layout_below="@+id/enterTimeET"
        android:layout_toEndOf="@+id/titleTV" />

    <Button
        android:text="Make Reservation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/priceTV"
        android:layout_marginBottom="43dp"
        android:id="@+id/makeReservationButton" />

    <Button
        android:text="Add to Favorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/makeReservationButton"
        android:layout_toEndOf="@+id/priceTV"
        android:id="@+id/addToFavoritesButton" />


</RelativeLayout>
