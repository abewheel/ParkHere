<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_advanced_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sparkleusc.sparklesparkhere.AdvancedSettingsActivity">


    <TextView
        android:text="Prices ($/hr)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="$0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:layout_alignBottom="@+id/distanceSeekBar"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="$300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:layout_alignBottom="@+id/distanceSeekBar"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Distance (mi)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView12"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp"
        android:id="@+id/textView14" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:id="@+id/distanceSeekBar"
        android:max = "300"
        android:layout_below="@+id/textView11"
        android:layout_toEndOf="@+id/textView14"
        android:layout_marginStart="82dp" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/seekBar6"
        android:max="10"
        android:layout_below="@+id/textView14"
        android:layout_alignStart="@+id/distanceSeekBar" />

    <TextView
        android:text="0 mi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/seekBar6"
        android:layout_alignParentStart="true"
        android:id="@+id/textView15" />

    <TextView
        android:text="10 mi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/seekBar6"
        android:layout_alignParentEnd="true"
        android:id="@+id/textView16" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar6"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="26dp"
        android:id="@+id/lenderRatingRatingBar"
        android:layout_alignStart="@+id/seekBar6" />

    <TextView
        android:text="Lender Rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lenderRatingRatingBar"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:id="@+id/textView17" />

    <CheckBox
        android:text="Covered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lenderRatingRatingBar"
        android:layout_alignParentStart="true"
        android:id="@+id/coveredCB" />

    <CheckBox
        android:text="Tandem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coveredCB"
        android:layout_alignParentStart="true"
        android:id="@+id/tandemCB" />

    <CheckBox
        android:text="Truck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/handicappedCB"
        android:layout_alignStart="@+id/handicappedCB"
        android:id="@+id/truckCB" />

    <CheckBox
        android:text="Compact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lenderRatingRatingBar"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp"
        android:id="@+id/compactCB" />

    <CheckBox
        android:text="Handicapped"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/handicappedCB"
        android:layout_below="@+id/lenderRatingRatingBar"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:text="Start Time (hours)"
        android:layout_marginTop="16dp"
        android:id="@+id/startTextET"
        android:layout_below="@+id/truckCB"
        android:layout_toStartOf="@+id/textView13" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:text="End Time (hours)"
        android:id="@+id/endTimeET"
        android:layout_alignTop="@+id/startTextET"
        android:layout_alignStart="@+id/startTextET"
        android:layout_marginTop="55dp" />

    <Button
        android:text="Done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/doneButton" />

</RelativeLayout>
